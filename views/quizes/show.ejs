<div class="contenedor_centrado">
  <form method="get" action="/quizes/<%= quiz.id %>/answer" class="pregunta">
    <h2>Pregunta</h2>
    <p><%= quiz.pregunta %>
      <input type="text" name="respuesta" placeholder="Responda aquÃ­" class="caja_texto" />
    </p>
    <input type="submit" value="Enviar" class="boton" />

    <h3>Comentarios</h2>
    <ul>
    <% for (index in quiz.comments) { %>
      <% if (quiz.comments[index].publicado || session.user) { %>
        <li> 
          <%= quiz.comments[index].texto %>
          <% if (session.user && !quiz.comments[index].publicado) { %>
            <a href="/quizes/<%= quiz.id %>/comments/<%= quiz.comments[index].id %>/publish" class="publicar" title="Publicar">Publicar</a>
          <% } %>
        </li>
      <% } %>
    <% } %>
    </ul>
    <p><a href="/quizes/<%= quiz.id %>/comments/new" class="boton anadir">Nuevo comentario</a>
  </form>
</div>
